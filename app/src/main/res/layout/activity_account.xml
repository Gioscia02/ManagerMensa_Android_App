<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="true">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_account"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Account"
        app:titleTextColor="@color/green"
        app:navigationIcon="@drawable/arrow"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_account">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button_portafoglio"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Portafoglio"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />

                <Button
                    android:id="@+id/button_modifica_credenziali"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Modifica credenziali"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button_cambia_immagine_profilo"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Cambia immagine di profilo"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />

                <Button
                    android:id="@+id/button_storico_pasti"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Storico pasti"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button_logout"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Logout"
                    android:textColor="#dc143c"
                    android:textSize="16dp"
                    android:textAllCaps="true"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>