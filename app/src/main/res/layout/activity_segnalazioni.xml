<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegnalazioniActivity"
    android:fitsSystemWindows="true">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_segnalazioni"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Segnalazioni"
        app:titleTextColor="@color/green"
        app:navigationIcon="@drawable/arrow"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleziona l'argomento della tua segnalazione"
                android:textSize="16sp"
                android:textStyle="bold"/>



            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >

                <RadioButton
                    android:id="@+id/radioButtonStruttura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Struttura" />

                <RadioButton
                    android:id="@+id/radioButtonCucina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cucina" />

                <RadioButton
                    android:id="@+id/radioButtonServizio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servizio" />

                <RadioButton
                    android:id="@+id/radioButtonManagerMensa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ManagerMensa" />

            </RadioGroup>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Scrivi la segnalazione" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/invia_segnalazione"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@drawable/button"
                android:fontFamily="sans-serif"
                android:text="Invia"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="16dp"
                app:backgroundTint="@null"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>