<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="true">




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/account_40"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        

        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/green"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_menu"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Menu"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />

                <Button
                    android:id="@+id/button_acquista"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Acquista pasto"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_prenotazioni"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Prenotazioni"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />

                <Button
                    android:id="@+id/button_allergie_intolleranze"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Allergie e intolleranze"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_info_mensa"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Info mensa"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />

                <Button
                    android:id="@+id/button_comunicazioni"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Comunicazioni"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_segnalazioni"
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:radius="2dp"
                    android:text="Segnalazioni"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    app:backgroundTint="@null"
                    app:rippleColor="#C61616"/>

                <Button
                    android:layout_width="171dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    app:backgroundTint="@null" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>